{
  "name": "tormentum-api",
  "version": "1.0.0",
  "description": "API for Tormentum app",
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "start": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "production": "ts-node -r tsconfig-paths/register build/index.js",
    "build": "tsc --project ./",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "test": "jest"
  },
  "config": {
    "mongodbMemoryServer": {
      "preferGlobalPath": false
    }
  },
  "author": "TheTwoCoders",
  "license": "ISC",
  "dependencies": {
    "class-validator": "^0.13.1",
    "crypto-js": "^4.1.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.5",
    "ts-node": "^10.2.1",
    "tsconfig-paths": "^3.11.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "babel-jest": "^27.2.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jest-formatting": "^3.0.0",
    "jest": "^27.2.0",
    "mongodb-memory-server": "^7.4.0",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  }
}
