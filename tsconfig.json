{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@domain/*": ["domain/*"],
      "@exceptions/*": ["exceptions/*"],
      "@routes/*": ["routes/*"],
      "@database/*": ["database/*"],
      "@repositories/*": ["repositories/*"],
      "@server/*": ["server/*"],
      "@utils/*": ["utils/*"],
      "@resources/*": ["resources/*"],
      "@use_cases/*": ["use_cases/*"],
    },
    "noImplicitAny": false,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  }
}
